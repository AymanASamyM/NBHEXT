{
    "name": "NBHEXT",
    "version": "1.0",
    "description": "No ButtHurt EXTension for Codeforces: know your rating",

    "manifest_version": 2,

    "icons":
    {
	"16": "static/icon16.png",
	"32": "static/icon32.png",
	"48": "static/icon48.png",
	"128": "static/icon128.png"
    },
    
    "permissions":
    [
	"tabs",
	"activeTab",
	"background",
	"http://codeforces.com/"
    ],

    "content_scripts": [ {
        "js": [ "third_party/jquery.js", "showPreRatings.js", "RatingCalculation/CalculateRatingChanges.js"],
        "matches": ["http://codeforces.com/contest/*/standings*"]
      }]
}
